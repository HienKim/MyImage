<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.thuhuong.appmyimage.ImageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageProfilePictureView"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/tvName"
            android:textSize="25dp"
            android:layout_toRightOf="@+id/imageProfilePictureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@+id/imageProfilePictureView"
            android:text="TextView" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/imageProfilePictureView"
            android:layout_toEndOf="@+id/tvName"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvName"
            android:layout_alignStart="@+id/tvName"
            android:layout_centerVertical="true"
            android:text="TextView" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgCapture"
            android:src="@drawable/camera"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/imgChooseImage"
            android:layout_marginLeft="50dp"
            android:src="@drawable/choose"
            android:gravity="right"
            android:layout_width="150dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imgView"
        android:src="@drawable/myphoto"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="180dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:id="@+id/edtName"
        android:hint="Nhập tên hình"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnShare"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="SHARE ON FACEBOOK"
            android:background="@drawable/border"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSaveImg"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="SAVE IMAGE IN FIREBASE"
            android:textColor="#ffffff"
            android:background="@drawable/border"
            android:textStyle="bold"/>

    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btnShow"
        android:text="SHOW IMAGE"
        android:textColor="#ffffff"
        android:background="@drawable/border"
        android:textStyle="bold"/>

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btnLogout"
        android:text="LOG OUT"
        android:textColor="#ffffff"
        android:background="@drawable/border"
        android:textStyle="bold"/>

</LinearLayout>
