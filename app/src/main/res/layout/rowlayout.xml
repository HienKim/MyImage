<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/border"
        android:id="@+id/imgImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tvNameImg"
        android:textStyle="bold"
        android:textColor="#f00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="32dp"
        android:layout_alignTop="@+id/imgImage"
        android:layout_alignLeft="@+id/tvTime"
        android:layout_alignStart="@+id/tvTime" />
    <TextView
        android:id="@+id/tvTime"
        android:textStyle="bold"
        android:textColor="#f00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:text="TextView"
        android:layout_alignBottom="@+id/imgImage"
        android:layout_toRightOf="@+id/imgImage"
        android:layout_toEndOf="@+id/imgImage" />
</RelativeLayout>